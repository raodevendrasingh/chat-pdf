{
	"name": "docverse",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently 'npm run watch:format' 'next dev --turbopack'",
		"build": "next build",
		"start": "next start",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check .",
		"watch:format": "onchange '**/*.{js,jsx,ts,tsx,json,css,md,mdx}' -- biome format --write {{changed}} 2>&1 | grep 'Formatted'",
		"pages:build": "bunx @cloudflare/next-on-pages",
		"preview": "bun pages:build && wrangler pages dev --experimental-vectorize-bind-to-prod",
		"deploy": "bun pages:build && wrangler pages deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
		"push": "bunx drizzle-kit push",
		"generate": "bunx drizzle-kit generate",
		"migrate": "bunx drizzle-kit migrate",
		"migrate:cf": "wrangler d1 migrations apply ragchat --remote"
	},
	"dependencies": {
		"@cloudflare/ai": "^1.2.2",
		"@t3-oss/env-nextjs": "^0.11.1",
		"drizzle-orm": "^0.38.4",
		"hono": "^4.6.17",
		"next": "15.1.4",
		"prettier": "^3.4.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/next-on-pages": "1",
		"@cloudflare/workers-types": "^4.20250109.0",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"concurrently": "^9.1.2",
		"drizzle-kit": "^0.30.2",
		"onchange": "^7.1.0",
		"postcss": "^8",
		"tailwindcss": "^3.4.1",
		"typescript": "^5",
		"vercel": "^39.3.0",
		"wrangler": "^3.103.2"
	}
}
